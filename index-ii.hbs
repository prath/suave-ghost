{{!< default}}

{{> header-ii}}

<main id="wrapper" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{/if}} class="image covered" role="main">
    
    {{!-- Headline --}}
    <div class="headline">
        <div class="container full">

            {{!-- Output the first post on pagination --}}
            {{#foreach posts}}
                {{#if @first}}
            <article class="vertically centered hero unit">
                <header>

                    {{!-- post date --}}
                    <time class="post date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format='DD MMM YYYY'}}
                    </time>

                    {{!-- post title --}}
                    <h1><a href="{{url}}">{{title}}</a></h1>

                </header>
            </article>

            {{!-- post read more --}}
            <a href="{{url}}" class="btn btn-primary btn-lg btn-cta">Read More</a>
                {{/if}}
            {{/foreach}}

        </div>
    </div>

    {{!-- Output the rest of the posts --}}
    {{#foreach posts}}
        {{#unless @first}}
    <article class="post excerpt container">
        <header>

            {{!-- post date --}}
            <time class="post date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format='DD MMM YYYY'}}
            </time>

            {{!-- post title --}}
            <h2><a href="{{url}}">{{title}}</a></h2>

        </header>
    </article>
        {{/unless}}
    {{/foreach}}

    {{!-- Output pagination --}}
    <div class="pagination holder">
        {{pagination}}
    </div>

</main>

<!-- FOOTER-->
{{> footer}}